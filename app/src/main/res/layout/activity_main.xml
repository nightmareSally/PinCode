<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <com.sally.pincode.PinCode
            android:id="@+id/pinCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            app:interval_spacing="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:text_background="@drawable/bg_f2f3f5_radius_4_fill"
            app:text_background_error="@drawable/bg_f2f3f5_radius_4_fill_ff4d4d_border"
            app:text_background_focus="@drawable/bg_f2f3f5_radius_4_fill_e1e3e6_border"
            app:text_number="6"
            app:text_padding_vertical="10dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>